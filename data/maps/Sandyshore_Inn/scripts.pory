script Sandyshore_Inn_EventScript_Man {
    speakername("Robert")
    if (var(VAR_LITTLEROOT_INTRO_STATE) == 5) {
        msgbox(format("Are you looking for Ruth, {PLAYER}?\p"
        "She just stormed past here and up the stairs."), MSGBOX_NPC)
        end
    }
    else {
        msgbox(format("There's a lot of guests at the inn this time of the year.\p"
        "In my not-at-all-biased opinion, our small beachside inn is the best vacation spot this side of Hoenn, after all!"), MSGBOX_NPC)
        end
    }
}

