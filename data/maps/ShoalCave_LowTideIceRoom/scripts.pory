raw `
ShoalCave_LowTideIceRoom_MapScripts::
	.byte 0
`
const LOCALID_FIELD_RESEARCHER = 3
const LOCALID_CASTFORM = 4

script ShoalCave_LowTideIceRoom_FieldResearcher {
	lock
	faceplayer
	speakername("Javiera")
	msgbox(format("Brrr, it's way too cold down here!\p"
		"Castform and I are checking if Groudon's activities have had effects on the frost in Shoal Cave."))
	applymovement(LOCALID_FIELD_RESEARCHER, Common_Movement_WalkInPlaceLeft)
	msgbox(format("Let's go, Castform.\pI need a hot chocolate to warm up after this!"))
	waitmovement(0)
	closemessage
	turnobject(LOCALID_CASTFORM, DIR_EAST)
	bufferspeciesname(STR_VAR_1, SPECIES_CASTFORM)
	speakername(CommonName_BufferedNameString1)
	playmoncry(SPECIES_CASTFORM, CRY_MODE_NORMAL)
	msgbox(Common_Text_Castform_Cry)
	closemessage
	fadescreen(FADE_TO_BLACK)
	setflag(FLAG_FOUND_SHOAL_CAVE_RESEARCHER)
	removeobject(LOCALID_FIELD_RESEARCHER)
	removeobject(LOCALID_CASTFORM)
	delay(16)
	fadescreen(FADE_FROM_BLACK)
	release
	end
}