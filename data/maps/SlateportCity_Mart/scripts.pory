raw `
SlateportCity_Mart_MapScripts::
	.byte 0

SlateportCity_Mart_EventScript_BlackBelt::
	msgbox SlateportCity_Mart_Text_SomeItemsOnlyAtMart, MSGBOX_NPC
	end

SlateportCity_Mart_Text_SomeItemsOnlyAtMart:
	.string "The market does have some interesting\n"
	.string "merchandise.\p"
	.string "But there are some items you can only\n"
	.string "get at a Pokémon Mart.$"

SlateportCity_Mart_Text_GreatBallIsBetter:
	.string "A Great Ball is better than a Poké Ball\n"
	.string "at catching Pokémon.\p"
	.string "With this, I should be able to get that\n"
	.string "elusive Pokémon…$"
`

script SlateportCity_Mart_EventScript_Clerk {
	lock
	faceplayer
	message(gText_HowMayIServeYou)
	waitmessage
	switch (var(VAR_POKEMART_TIER)){
		case 0:
			pokemart(SlateportCity_Mart_Pokemart_Tier0)
		case 1:
		default:
			pokemart(SlateportCity_Mart_Pokemart_Tier1)
	}
	
	msgbox(gText_PleaseComeAgain, MSGBOX_DEFAULT)
	release
	end
}

script SlateportCity_Mart_EventScript_Man {
	switch (var(VAR_POKEMART_TIER)){
		case 0:
			msgbox(format("A Great Ball is better than a Poké Ball at catching Pokémon.\p"
			"But they seem to be out of stock right now…\p"
			"I wonder if they have some left in Mauville City…"))
		default:
			msgbox(SlateportCity_Mart_Text_GreatBallIsBetter, MSGBOX_NPC)
	}
	end
}

mart SlateportCity_Mart_Pokemart_Tier0 {
	ITEM_POKE_BALL
	ITEM_POTION
	ITEM_ANTIDOTE
	ITEM_PARALYZE_HEAL
	ITEM_HARBOR_MAIL
	ITEM_NONE
}

mart SlateportCity_Mart_Pokemart_Tier1 {
	ITEM_POKE_BALL
	ITEM_GREAT_BALL
	ITEM_POTION
	ITEM_SUPER_POTION
	ITEM_ANTIDOTE
	ITEM_PARALYZE_HEAL
	ITEM_ESCAPE_ROPE
	ITEM_REPEL
	ITEM_HARBOR_MAIL
	ITEM_NONE
}